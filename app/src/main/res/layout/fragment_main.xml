<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">


    <Button
        android:id="@+id/button_income"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="ثبت درآمد"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_expense"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="ثبت هزینه"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_income" />

    <Button
        android:id="@+id/button_list"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="لیست هزینه ها"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_expense" />

    <Button
        android:id="@+id/button_reports"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="گزارش ها"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_list" />


</androidx.constraintlayout.widget.ConstraintLayout>