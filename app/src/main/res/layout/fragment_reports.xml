<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReportsFragment">


    <TextView
        android:id="@+id/reports_text_from_date"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="از تاریخ :"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_text_reports_from_date" />

    <TextView
        android:id="@+id/reports_text_to_date"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="تا تاریخ :"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_text_reports_to_date" />

    <EditText
        android:id="@+id/edit_text_reports_from_date"
        android:layout_width="260dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        app:layout_constraintEnd_toStartOf="@+id/reports_text_from_date"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_reports_to_date"
        android:layout_width="260dp"
        android:layout_height="62dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        app:layout_constraintEnd_toStartOf="@+id/reports_text_to_date"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_reports_from_date" />

    <Button
        android:id="@+id/button_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="نمودار هزینه ها در فاصله زمانی"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_reports_to_date" />

    <Button
        android:id="@+id/button_query_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="نمودار درآمدها در فاصله زمانی"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_query" />

    <Button
        android:id="@+id/button_query_2"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="مقایسه درآمد و هزینه ها"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_query_1" />

</androidx.constraintlayout.widget.ConstraintLayout>